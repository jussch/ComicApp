<%= auth_token %>

<label>
  Username
  <input type="text" name="user[username]" value="<%= @user.username %>">
</label>

<label>
  Password
  <input type="password" name="user[password]" value="">
</label>

<% if confirm_password %>
  <label>
    Confirm Password
    <input type="password" name="user[password_confirm]" value="">
  </label>
<% end %>

<input type="submit" value="Submit">
